= form_for @scarf do |f|
  - if @scarf.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scarf.errors.count, "error")} prohibited this scarf from being saved:"
      %ul
        - @scarf.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
